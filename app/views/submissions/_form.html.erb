<%= simple_form_for(@support_request, url: submissions_path) do |f| %>
  <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :domain %>
      <%= f.input :customer_email %>
      <%= f.input :name %>
      <%= f.input :phone %>
      <%= f.input :notes, label: 'Message' %>
    </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
